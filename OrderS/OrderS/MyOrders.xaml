<Window x:Class="OrderS.MyOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderS"
        mc:Ignorable="d"
        Title="MyOrders" Height="450" Width="800">
    <Grid>
        <DataGrid MouseLeftButtonUp="OrdersGrid_OnMouseLeftButtonUp" Name="OrdersGrid" IsReadOnly="True" Margin="0,32,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,6,0,0" FontSize="16" Text="Click on the order to pay for the order" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
