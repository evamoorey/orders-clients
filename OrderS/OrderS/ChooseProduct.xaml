<Window x:Class="OrderS.ChooseProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderS"
        mc:Ignorable="d"
        Title="ChooseProduct" Height="200" Width="300">
    <Grid>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top" BorderThickness="0"
                Width="300" Click="ButtonBase_OnClick" Height="20"/>
        <Label Content="Select product" Width="300" Height="30" Margin="0,0,0,130"/>
        <StackPanel Margin="5">
            <ComboBox HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" Width="270" IsEditable="False"
                      IsReadOnly="True" Name ="Selection">
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
